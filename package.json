{
  "name": "my-turborepo",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@retestlabs/eslint-config": "workspace:*",
